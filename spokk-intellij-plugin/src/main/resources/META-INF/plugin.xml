<idea-plugin>
    <id>io.github.pshevche.spokk.spokk-intellij-plugin</id>
    <name>Spokk</name>
    <vendor url="https://www.github.com/pshevche">Pavlo Shevchenko</vendor>
    <description><![CDATA[
    Integration for the Spokk test framework
  ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>org.jetbrains.plugins.gradle</depends>

    <extensions defaultExtensionNs="com.intellij">
        <testFramework id="Spokk" implementation="io.github.pshevche.spokk.intellij.SpokkTestFramework"/>
        <runConfigurationProducer implementation="io.github.pshevche.spokk.intellij.SpokkRunConfigurationProducer"/>
    </extensions>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK2="true"/>
    </extensions>
</idea-plugin>