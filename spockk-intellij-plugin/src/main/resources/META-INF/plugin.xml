<idea-plugin>
    <id>io.github.pshevche.spockk.spockk-intellij-plugin</id>
    <name>Spockk</name>
    <vendor url="https://www.github.com/pshevche">Pavlo Shevchenko</vendor>
    <description><![CDATA[
    Provides seamless integration of the Spockk testing and specification framework with IntelliJ:

    <ul>
        <li>Detects Spockk syntax in test sources</li>
        <li>Supports executing Spockk tests with Gradle</li>
    </ul>
  ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>org.jetbrains.plugins.gradle</depends>

    <extensions defaultExtensionNs="com.intellij">
        <testFramework id="Spockk" implementation="io.github.pshevche.spockk.intellij.SpockkTestFramework"/>
        <runConfigurationProducer
                implementation="io.github.pshevche.spockk.intellij.SpockkSpecificationRunConfigurationProducer"/>
        <runConfigurationProducer
                implementation="io.github.pshevche.spockk.intellij.SpockkFeatureRunConfigurationProducer"/>
        <implicitUsageProvider implementation="io.github.pshevche.spockk.intellij.SpockkImplicitUsageProvider"/>
        <lang.inspectionSuppressor language="kotlin"
                                   implementationClass="io.github.pshevche.spockk.intellij.SpockkUnusedBlockInspectionSuppressor"/>
    </extensions>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK2="true"/>
    </extensions>
</idea-plugin>
